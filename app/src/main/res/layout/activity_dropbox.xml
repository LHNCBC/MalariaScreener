<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_dropbox"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    tools:context="gov.nih.nlm.malaria_screener.database.Dropbox">

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/navigate_bar_dropbox"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="#1F568a"
        android:textAlignment="center"></android.support.v7.widget.Toolbar>

    <ProgressBar
        android:id="@+id/progressBar_upload"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp" />

    <TextView
        android:id="@+id/textView_notice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="500dp"
        />

    <TextView
        android:id="@+id/textView_notice_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView_notice"
        />

    <Button
        android:id="@+id/button_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="#d95891ec"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="@string/upload_dropbox"
        android:textColor="#FFFFFF"
        android:textSize="17dp" />

    <ProgressBar
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_upload"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:id="@+id/progressBar_upload1" />

    <!--<Button
        android:id="@+id/button_upload2Server"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_upload"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="47dp"
        android:background="#d95891ec"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="@string/upload_server"
        android:textColor="#FFFFFF"
        android:textSize="17dp" /> -->

</RelativeLayout>

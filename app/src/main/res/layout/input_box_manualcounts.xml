<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    >


    <TextView
        android:id="@+id/textView_manualcounts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_marginStart="3dp"/>

    <EditText
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText_manualcounts"
        android:layout_gravity="center"
        android:inputType="number"
        android:layout_below="@+id/textView_manualcounts"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        >
    </EditText>


    <Button
        android:id="@+id/button_okay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/ok"
        android:layout_marginEnd="18dp"
        android:layout_below="@+id/editText_manualcounts"
        android:layout_alignEnd="@+id/editText_manualcounts" />

    <Button
        android:id="@+id/button_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/cancel"
        android:layout_below="@+id/editText_manualcounts"
        android:layout_alignStart="@+id/editText_manualcounts"
        android:layout_marginStart="18dp" />


</RelativeLayout>